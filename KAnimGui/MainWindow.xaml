<Window
    x:Class="KAnimGui.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    Title="Kanim Spriter Exporter"
    Width="900"
    Height="750"
    Background="{DynamicResource MaterialDesignPaper}"
    FontFamily="Segoe UI"
    TextElement.Foreground="{DynamicResource MaterialDesignBody}"
    WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <!--  自定义颜色  -->
        <SolidColorBrush x:Key="PrimaryColor" Color="#FF6750A4" />
        <SolidColorBrush x:Key="SecondaryColor" Color="#FFE8DEF8" />
        <SolidColorBrush x:Key="AccentColor" Color="#FF7E5260" />

        <!--  样式调整  -->
        <Style BasedOn="{StaticResource MaterialDesignNavigationRailTabItem}" TargetType="TabItem">
            <Setter Property="FontSize" Value="14" />
            <Setter Property="Padding" Value="16,12" />
            <Setter Property="Margin" Value="0,0,4,0" />
            <Setter Property="FontWeight" Value="Medium" />
            <Setter Property="Foreground" Value="{DynamicResource PrimaryHueLightBrush}" />
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderBrush" Value="Transparent" />

            <!--  鼠标悬停效果  -->
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type TabItem}">
                        <Grid>
                            <Border
                                Name="Border"
                                Margin="{TemplateBinding Margin}"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="0,0,0,2"
                                CornerRadius="4 4 0 0">
                                <ContentPresenter
                                    x:Name="ContentSite"
                                    Margin="{TemplateBinding Padding}"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    ContentSource="Header" />
                            </Border>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <!--  选中状态  -->
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Border" Property="BorderBrush" Value="{DynamicResource PrimaryHueMidBrush}" />
                                <Setter TargetName="Border" Property="Background" Value="{DynamicResource PrimaryHueLightBrush}" />
                                <Setter Property="Foreground" Value="{DynamicResource PrimaryHueDarkBrush}" />
                            </Trigger>

                            <!--  鼠标悬停  -->
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="{DynamicResource PrimaryHueLightBrush}" />
                                <Setter Property="Foreground" Value="{DynamicResource PrimaryHueDarkBrush}" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>







        </Style>

        <Style BasedOn="{StaticResource MaterialDesignRaisedButton}" TargetType="Button">
            <Setter Property="Margin" Value="5" />
            <Setter Property="Width" Value="100" />
        </Style>








    </Window.Resources>







    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!--  顶部应用栏 (App Bar)  -->
        <Border
            Grid.ColumnSpan="2"
            Height="48"
            VerticalAlignment="Center"
            Background="#FF94435D">
            <DockPanel>
                <!--  应用标题  -->
                <TextBlock
                    Margin="15,0"
                    VerticalAlignment="Center"
                    DockPanel.Dock="Left"
                    FontSize="18"
                    FontWeight="SemiBold"
                    Foreground="White"
                    Text="Kanim Spriter Exporter" />

                <!--  菜单按钮  -->
                <Grid Margin="0,0,10,0" DockPanel.Dock="Right">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                        <!--  占位撑开  -->
                        <ColumnDefinition Width="Auto" />
                        <!--  PinButton 靠右  -->
                    </Grid.ColumnDefinitions>

                    <Button
                        x:Name="SettingsButton"
                        Grid.Column="0"
                        Click="SettingsButton_Click"
                        Content="{materialDesign:PackIcon Kind=Cog}"
                        Cursor="Hand"
                        FocusVisualStyle="{x:Null}"
                        Foreground="White"
                        Style="{StaticResource MaterialDesignIconButton}"
                        ToolTip="设置" />
                    <Button
                        x:Name="HelpButton"
                        Grid.Column="1"
                        Click="HelpButton_Click"
                        Content="{materialDesign:PackIcon Kind=HelpCircle}"
                        FocusVisualStyle="{x:Null}"
                        Foreground="White"
                        Style="{StaticResource MaterialDesignIconButton}"
                        ToolTip="帮助" />
                    <Button
                        x:Name="GithubButton"
                        Grid.Column="2"
                        Click="GithubButton_Click"
                        Content="{materialDesign:PackIcon Kind=Github}"
                        FocusVisualStyle="{x:Null}"
                        Foreground="White"
                        Style="{StaticResource MaterialDesignIconButton}"
                        ToolTip="Github" />
                    <Button
                        x:Name="TestButton"
                        Grid.Column="3"
                        Click="TestButton_Click"
                        Content="{materialDesign:PackIcon Kind=TestTube}"
                        FocusVisualStyle="{x:Null}"
                        Foreground="White"
                        Style="{StaticResource MaterialDesignIconButton}"
                        ToolTip="实验功能" />

                    <!--  PinButton 靠右  -->
                    <Button
                        x:Name="PinButton"
                        Grid.Column="5"
                        Click="PinButton_Click"
                        Content="{materialDesign:PackIcon Kind=Pin}"
                        FocusVisualStyle="{x:Null}"
                        Foreground="White"
                        Style="{StaticResource MaterialDesignIconButton}"
                        ToolTip="窗口置顶" />
                </Grid>


            </DockPanel>
        </Border>




        <!--  主内容区  -->
        <TabControl
            x:Name="MainTabControl"
            Grid.Row="1"
            Grid.ColumnSpan="2"
            Margin="10,10,10,10"
            materialDesign:ColorZoneAssist.Mode="PrimaryMid"
            Background="Transparent">
            <!--  Kanim转SCML标签页  -->
            <TabItem
                x:Name="KanimToScmlTab"
                materialDesign:ColorZoneAssist.Mode="PrimaryMid"
                Header="Kanim → SCML"
                Style="{StaticResource MaterialDesignTabItem}">


                <Border
                    Margin="5"
                    Padding="10"
                    Background="#FF90455D"
                    CornerRadius="5">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <!--  文件选择卡片  -->
                        <materialDesign:Card
                            Grid.Row="0"
                            Margin="0,0,0,10"
                            Padding="10"
                            UniformCornerRadius="5">
                            <StackPanel>
                                <TextBlock
                                    Margin="0,0,0,5"
                                    FontWeight="Bold"
                                    Text="文件选择" />

                                <!--  文件输入框组  -->
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>

                                    <!--  PNG文件  -->
                                    <TextBox
                                        x:Name="PngPathTextBox"
                                        Grid.Row="0"
                                        Grid.Column="0"
                                        Margin="0,0,5,5"
                                        materialDesign:HintAssist.Hint="PNG文件路径"
                                        Style="{StaticResource MaterialDesignFloatingHintTextBox}" />
                                    <Button
                                        x:Name="BrowsePngButton"
                                        Grid.Row="0"
                                        Grid.Column="1"
                                        Margin="0,0,0,5"
                                        Click="Browse_Click"
                                        Content="浏览"
                                        FocusVisualStyle="{x:Null}"
                                        Style="{StaticResource MaterialDesignOutlinedButton}" />

                                    <!--  Anim文件  -->
                                    <TextBox
                                        x:Name="AnimPathTextBox"
                                        Grid.Row="1"
                                        Grid.Column="0"
                                        Margin="0,0,5,5"
                                        materialDesign:HintAssist.Hint="Anim文件路径"
                                        Style="{StaticResource MaterialDesignFloatingHintTextBox}" />
                                    <Button
                                        x:Name="BrowseAnimButton"
                                        Grid.Row="1"
                                        Grid.Column="1"
                                        Margin="0,0,0,5"
                                        Click="Browse_Click"
                                        Content="浏览"
                                        FocusVisualStyle="{x:Null}"
                                        Style="{StaticResource MaterialDesignOutlinedButton}" />

                                    <!--  Build文件  -->
                                    <TextBox
                                        x:Name="BuildPathTextBox"
                                        Grid.Row="2"
                                        Grid.Column="0"
                                        Margin="0,0,5,0"
                                        materialDesign:HintAssist.Hint="Build文件路径"
                                        Style="{StaticResource MaterialDesignFloatingHintTextBox}" />
                                    <Button
                                        x:Name="BrowseBuildButton"
                                        Grid.Row="2"
                                        Grid.Column="1"
                                        Click="Browse_Click"
                                        Content="浏览"
                                        FocusVisualStyle="{x:Null}"
                                        Style="{StaticResource MaterialDesignOutlinedButton}" />
                                </Grid>
                            </StackPanel>
                        </materialDesign:Card>

                        <!--  选项卡片  -->
                        <materialDesign:Card
                            Grid.Row="1"
                            Margin="0,0,0,10"
                            Padding="10"
                            UniformCornerRadius="5">
                            <StackPanel>
                                <TextBlock
                                    Margin="0,0,0,5"
                                    FontWeight="Bold"
                                    Text="转换选项" />

                                <StackPanel Orientation="Horizontal">
                                    <CheckBox
                                        x:Name="StrictModeCheckBox"
                                        Margin="0,0,15,0"
                                        Content="严格模式"
                                        FocusVisualStyle="{x:Null}"
                                        Style="{StaticResource MaterialDesignCheckBox}"
                                        ToolTip="强制转换过程遵循更严格的规范检查，确保输出文件完全符合Klei官方标准。" />
                                    <CheckBox
                                        x:Name="StrictOrderCheckBox"
                                        Content="严格文件顺序"
                                        FocusVisualStyle="{x:Null}"
                                        Style="{StaticResource MaterialDesignCheckBox}"
                                        ToolTip="为真PNG 文件 → Build 文件 → Anim 文件&#10;否则PNG 文件 → Anim 文件 → Build 文件" />
                                </StackPanel>

                                <Grid Margin="0,10,0,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <!--  标签宽度自适应  -->
                                        <ColumnDefinition Width="*" />
                                        <!--  TextBox 占剩余  -->
                                        <ColumnDefinition Width="Auto" />
                                        <!--  按钮固定宽度  -->
                                    </Grid.ColumnDefinitions>

                                    <TextBlock
                                        Grid.Column="0"
                                        Margin="0,0,10,0"
                                        VerticalAlignment="Center"
                                        Text="输出目录:" />
                                    <TextBox
                                        x:Name="OutputDirTextBox"
                                        Grid.Column="1"
                                        materialDesign:HintAssist.Hint="选择输出目录"
                                        Style="{StaticResource MaterialDesignFloatingHintTextBox}" />
                                    <Button
                                        x:Name="BrowseOutputDirButton"
                                        Grid.Column="2"
                                        Width="60"
                                        Margin="5,0,0,0"
                                        Click="Browse_Click"
                                        Content="浏览"
                                        FocusVisualStyle="{x:Null}"
                                        Style="{StaticResource MaterialDesignOutlinedButton}" />
                                </Grid>

                            </StackPanel>
                        </materialDesign:Card>

                        <!--  日志输出卡片  -->
                        <materialDesign:Card
                            Grid.Row="3"
                            Margin="0,0,0,10"
                            Padding="0"
                            UniformCornerRadius="5">
                            <DockPanel>
                                <TextBlock
                                    Margin="10,10,10,5"
                                    DockPanel.Dock="Top"
                                    FontWeight="Bold"
                                    Text="转换日志" />
                                <ScrollViewer DockPanel.Dock="Bottom" VerticalScrollBarVisibility="Auto">
                                    <TextBox
                                        x:Name="LogTextBox"
                                        Padding="10"
                                        AcceptsReturn="True"
                                        Background="Transparent"
                                        BorderThickness="0"
                                        FontFamily="Consolas"
                                        IsReadOnly="True" />
                                </ScrollViewer>
                            </DockPanel>
                        </materialDesign:Card>

                        <!--  操作按钮  -->
                        <StackPanel
                            Grid.Row="4"
                            HorizontalAlignment="Right"
                            Orientation="Horizontal">
                            <Button
                                x:Name="ClearButton"
                                Background="#FF6750A4"
                                BorderBrush="#FF452382"
                                Click="ClearButton_Click"
                                Content="清除"
                                FocusVisualStyle="{x:Null}"
                                Foreground="White"
                                Style="{StaticResource MaterialDesignRaisedButton}" />
                            <Button
                                x:Name="ConvertButton"
                                Margin="10,0,0,0"
                                Background="#FF6750A4"
                                BorderBrush="#FF4B2394"
                                Click="ConvertButton_Click"
                                Content="开始转换"
                                FocusVisualStyle="{x:Null}"
                                Style="{StaticResource MaterialDesignRaisedButton}" />
                        </StackPanel>
                    </Grid>
                </Border>
            </TabItem>

            <!--  SCML转Kanim标签页  -->
            <TabItem
                x:Name="ScmlToKanimTab"
                Header="SCML → Kanim"
                Style="{StaticResource MaterialDesignTabItem}">
                <Border
                    Margin="5"
                    Padding="10"
                    Background="#FF90455D"
                    CornerRadius="5">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <!--  SCML文件选择  -->
                        <materialDesign:Card
                            Grid.Row="0"
                            Margin="0,0,0,10"
                            Padding="10"
                            UniformCornerRadius="5">
                            <StackPanel>
                                <TextBlock
                                    Margin="0,0,0,5"
                                    FontWeight="Bold"
                                    Text="SCML文件选择" />
                                <!--  用 Grid 替换 DockPanel  -->
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <!--  TextBox 占据剩余空间  -->
                                        <ColumnDefinition Width="Auto" />
                                        <!--  Button 尺寸自适应  -->
                                    </Grid.ColumnDefinitions>

                                    <TextBox
                                        x:Name="ScmlPathTextBox"
                                        Grid.Column="0"
                                        Margin="0"
                                        VerticalAlignment="Center"
                                        materialDesign:HintAssist.Hint="SCML文件路径 (.scml)"
                                        Style="{StaticResource MaterialDesignFloatingHintTextBox}" />

                                    <Button
                                        x:Name="BrowseScmlButton"
                                        Grid.Column="1"
                                        MinWidth="60"
                                        Margin="8,0,0,0"
                                        Click="Browse_Click"
                                        Content="浏览"
                                        FocusVisualStyle="{x:Null}"
                                        Style="{StaticResource MaterialDesignOutlinedButton}" />
                                </Grid>
                            </StackPanel>
                        </materialDesign:Card>

                        <!--  转换选项  -->
                        <materialDesign:Card
                            Grid.Row="1"
                            Margin="0,0,0,10"
                            Padding="10"
                            UniformCornerRadius="5">
                            <StackPanel>
                                <TextBlock
                                    Margin="0,0,0,5"
                                    FontWeight="Bold"
                                    Text="转换选项" />
                                <StackPanel Orientation="Horizontal">
                                    <CheckBox
                                        x:Name="InterpolateCheckBox"
                                        Margin="0,0,15,0"
                                        Content="启用插值"
                                        FocusVisualStyle="{x:Null}"
                                        Style="{StaticResource MaterialDesignCheckBox}"
                                        ToolTip="启用Spriter关键帧插值" />
                                    <CheckBox
                                        x:Name="DeboneCheckBox"
                                        Content="去骨骼"
                                        FocusVisualStyle="{x:Null}"
                                        Style="{StaticResource MaterialDesignCheckBox}"
                                        ToolTip="启用Spriter去骨骼操作" />
                                </StackPanel>



                                <Grid Margin="0,10,0,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <!--  Label  -->
                                        <ColumnDefinition Width="*" />
                                        <!--  TextBox  -->
                                        <ColumnDefinition Width="Auto" />
                                        <!--  Button  -->
                                    </Grid.ColumnDefinitions>

                                    <!--  标签  -->
                                    <TextBlock
                                        Grid.Column="0"
                                        Margin="0,0,10,0"
                                        VerticalAlignment="Center"
                                        Text="输出目录:" />

                                    <!--  文本框  -->
                                    <TextBox
                                        x:Name="ScmlOutputDirTextBox"
                                        Grid.Column="1"
                                        VerticalAlignment="Center"
                                        materialDesign:HintAssist.Hint="选择输出目录"
                                        Style="{StaticResource MaterialDesignFloatingHintTextBox}" />

                                    <!--  浏览按钮  -->
                                    <Button
                                        x:Name="BrowseScmlOutputDirButton"
                                        Grid.Column="2"
                                        MinWidth="60"
                                        Margin="8,0,0,0"
                                        Click="Browse_Click"
                                        Content="浏览"
                                        FocusVisualStyle="{x:Null}"
                                        Style="{StaticResource MaterialDesignOutlinedButton}" />
                                </Grid>

                            </StackPanel>
                        </materialDesign:Card>

                        <!--  日志输出  -->
                        <materialDesign:Card
                            Grid.Row="2"
                            Margin="0,0,0,10"
                            Padding="0"
                            UniformCornerRadius="5">
                            <DockPanel>
                                <TextBlock
                                    Margin="10,10,10,5"
                                    DockPanel.Dock="Top"
                                    FontWeight="Bold"
                                    Text="转换日志" />
                                <ScrollViewer DockPanel.Dock="Bottom" VerticalScrollBarVisibility="Auto">
                                    <TextBox
                                        x:Name="ScmlLogTextBox"
                                        Padding="10"
                                        AcceptsReturn="True"
                                        Background="Transparent"
                                        BorderThickness="0"
                                        FontFamily="Consolas"
                                        IsReadOnly="True" />
                                </ScrollViewer>
                            </DockPanel>
                        </materialDesign:Card>

                        <!--  操作按钮  -->
                        <StackPanel
                            Grid.Row="3"
                            HorizontalAlignment="Right"
                            Orientation="Horizontal">
                            <Button
                                x:Name="ScmlClearButton"
                                Background="#FF6750A4"
                                Click="ScmlClearButton_Click"
                                Content="清除"
                                FocusVisualStyle="{x:Null}"
                                Foreground="White"
                                Style="{StaticResource MaterialDesignRaisedButton}" />
                            <Button
                                x:Name="ConvertScmlButton"
                                Margin="10,0,0,0"
                                Background="#FF6750A4"
                                Click="ConvertScmlButton_Click"
                                Content="开始转换"
                                FocusVisualStyle="{x:Null}"
                                Foreground="White"
                                Style="{StaticResource MaterialDesignRaisedButton}" />
                        </StackPanel>
                    </Grid>
                </Border>
            </TabItem>




        </TabControl>

        <!--  底部状态栏  -->
        <StatusBar
            Grid.Row="2"
            Grid.ColumnSpan="2"
            Background="#FF94435D">
            <StatusBarItem>
                <TextBlock x:Name="StatusText" Foreground="White">就绪</TextBlock>
            </StatusBarItem>
            <StatusBarItem HorizontalAlignment="Right">
                <Border
                    Padding="2"
                    Background="White"
                    CornerRadius="3">
                    <ProgressBar
                        x:Name="ProgressBar"
                        Width="271"
                        Height="16"
                        Background="White"
                        BorderBrush="White"
                        Foreground="#FF452382"
                        IsIndeterminate="False" />
                </Border>
            </StatusBarItem>

        </StatusBar>
    </Grid>
</Window>