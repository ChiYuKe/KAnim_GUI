<Window x:Class="KAnimGui.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="设置 - Kanim Spriter Exporter"
        Height="500" Width="300"
        WindowStartupLocation="CenterOwner"
        Background="{DynamicResource MaterialDesignPaper}"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        FontFamily="Segoe UI"
        
        ResizeMode="NoResize"
        SizeToContent="Manual"
        
        >

    <Window.Resources>
        <!-- 复制 MainWindow 的资源 -->
        <SolidColorBrush x:Key="PrimaryColor" Color="#FF6750A4"/>
        <SolidColorBrush x:Key="SecondaryColor" Color="#FFE8DEF8"/>
        <SolidColorBrush x:Key="AccentColor" Color="#FF7E5260"/>

        <Style TargetType="TabItem" BasedOn="{StaticResource MaterialDesignNavigationRailTabItem}">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="16 12"/>
            <Setter Property="Margin" Value="0 0 4 0"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Foreground" Value="{DynamicResource PrimaryHueLightBrush}"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type TabItem}">
                        <Grid>
                            <Border Name="Border" 
                                    Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="0 0 0 2"
                                    CornerRadius="4 4 0 0"
                                    Margin="{TemplateBinding Margin}">
                                <ContentPresenter x:Name="ContentSite"
                                                  VerticalAlignment="Center"
                                                  HorizontalAlignment="Center"
                                                  ContentSource="Header"
                                                  Margin="{TemplateBinding Padding}"/>
                            </Border>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Border" Property="BorderBrush" Value="{DynamicResource PrimaryHueMidBrush}"/>
                                <Setter TargetName="Border" Property="Background" Value="{DynamicResource PrimaryHueLightBrush}"/>
                                <Setter Property="Foreground" Value="{DynamicResource PrimaryHueDarkBrush}"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="{DynamicResource PrimaryHueLightBrush}" />
                                <Setter Property="Foreground" Value="{DynamicResource PrimaryHueDarkBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="Button" BasedOn="{StaticResource MaterialDesignRaisedButton}">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Width" Value="100"/>
        </Style>
        
        
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="48"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>


        <!-- 顶部应用栏，只有标题，没有按钮 -->
        <Border Background="#FF94435D" VerticalAlignment="Center">
            <DockPanel Height="50">
                <TextBlock DockPanel.Dock="Left" Text="设置 - Kanim Spriter Exporter" 
                           VerticalAlignment="Center" Margin="15,0"
                           FontSize="18" FontWeight="SemiBold" Foreground="White"/>
            </DockPanel>
        </Border>

       <!-- 操作按钮区域 -->
<StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,10,10">
    <Button Content="取消" Margin="0,0,10,0" 
            Style="{StaticResource MaterialDesignOutlinedButton}"
            Click="CancelButton_Click"/>
    <Button Content="确定" 
            Style="{StaticResource MaterialDesignRaisedButton}" 
            Background="#FF6750A4" Foreground="White"
            Click="ConfirmButton_Click"/>
</StackPanel>

        <!-- 设置内容区域 -->
        <StackPanel Grid.Row="1" Margin="10">


            <StackPanel Margin="0,10,0,20" >


                <materialDesign:Card Padding="10" Margin="0,0,0,10" Background="#FF94435D" UniformCornerRadius="5">
                    <Grid VerticalAlignment="Center">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <CheckBox x:Name="EnableFeatureCheckBox"
                      Style="{StaticResource MaterialDesignCheckBox}"
                      VerticalAlignment="Bottom"
                      Grid.Column="0"/>
                        <TextBlock Text="转换完成打开目标文件夹"
                       VerticalAlignment="Center"
                       Foreground="White"
                       Margin="5,0,0,0"
                       Grid.Column="1"/>
                    </Grid>
                </materialDesign:Card>
                
                <materialDesign:Card Padding="10" Margin="0,0,0,10" Background="#FF94435D" UniformCornerRadius="5">
                    <Grid VerticalAlignment="Center">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <CheckBox x:Name="NoSuccessPopupCheckBox"
                                    Style="{StaticResource MaterialDesignCheckBox}"
                                    VerticalAlignment="Bottom"
                                    Grid.Column="0"/>
                        <TextBlock Text="转换完成不弹出提示"
                                    VerticalAlignment="Center"
                                    Foreground="White"
                                    Margin="5,0,0,0"
                                    Grid.Column="1"/>      
                    </Grid>
                </materialDesign:Card>

                <materialDesign:Card Padding="10" Margin="0,0,0,10" Background="#FF94435D" UniformCornerRadius="5">
                    <Grid VerticalAlignment="Center">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <CheckBox x:Name="EnableTxtToBytesCheckBox"
                      Style="{StaticResource MaterialDesignCheckBox}"
                      VerticalAlignment="Bottom"
                      Grid.Column="0"/>
                        <TextBlock Text="接受识别.txt 转.bytes"
                       VerticalAlignment="Center"
                       Foreground="White"
                       Margin="5,0,0,0"
                       Grid.Column="1"/>
                    </Grid>
                </materialDesign:Card>

                <materialDesign:Card Padding="10" Margin="0,0,0,10" Background="#FF94435D" UniformCornerRadius="5">
                    <StackPanel>

                        <!-- 复选框 + 文本，用 Grid 对齐 -->
                        <Grid VerticalAlignment="Center" Margin="0,0,0,8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <CheckBox x:Name="UseCustomKsePathCheckBox"
                      Style="{StaticResource MaterialDesignCheckBox}"
                      VerticalAlignment="Center"
                      Grid.Column="0"/>
                            <TextBlock Text="使用指定 kanimal-cli.exe 程序路径"
                       VerticalAlignment="Center"
                       Foreground="White"
                       Margin="5,0,3,0"
                       Grid.Column="1"/>
                        </Grid>

                        <!-- 输入框 + 浏览按钮 -->
                        <DockPanel>
                            <TextBox x:Name="CustomKsePathTextBox"
                                 Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                                 materialDesign:HintAssist.Foreground="White"         
                                 materialDesign:HintAssist.Hint="请输入 kanimal-cli.exe 路径"
                                 DockPanel.Dock="Left"
                                 MinWidth="180"
                                 SelectionBrush="White"
                                 CaretBrush="White"
                                 Foreground="White" />
                            <Button Content="浏览"
                                DockPanel.Dock="Right"
                                Margin="8,0,0,0"
                                Padding="10,2"
                                Click="BrowseKseButton_Click"
                                Style="{StaticResource MaterialDesignOutlinedButton}"
                                Background="#FF673AB7"
                                Foreground="White"
                                BorderBrush="#FF330584" />
                        </DockPanel>

                    </StackPanel>
                </materialDesign:Card>







            </StackPanel>




            <!-- 添加你需要的设置控件 -->
        </StackPanel>
    </Grid>
</Window>
