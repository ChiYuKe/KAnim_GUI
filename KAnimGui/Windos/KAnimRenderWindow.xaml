<Window
    x:Class="KAnimGui.Windos.KAnimRenderWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    Title="Anim Render Window"
    Width="1280"
    Height="720"
    FontFamily="Segoe UI"
    SizeToContent="Manual"
    TextElement.Foreground="{DynamicResource MaterialDesignBody}"
    WindowStartupLocation="CenterOwner">
    <!--  MouseDown 拖动事件  -->

    <Window.Resources>
        <!--  复制 MainWindow 的资源  -->
        <SolidColorBrush x:Key="PrimaryColor" Color="#FF6750A4" />
        <SolidColorBrush x:Key="SecondaryColor" Color="#FFE8DEF8" />
        <SolidColorBrush x:Key="AccentColor" Color="#FF7E5260" />

        <Style BasedOn="{StaticResource MaterialDesignNavigationRailTabItem}" TargetType="TabItem">
            <Setter Property="FontSize" Value="14" />
            <Setter Property="Padding" Value="16,12" />
            <Setter Property="Margin" Value="0,0,4,0" />
            <Setter Property="FontWeight" Value="Medium" />
            <Setter Property="Foreground" Value="{DynamicResource PrimaryHueLightBrush}" />
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderBrush" Value="Transparent" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type TabItem}">
                        <Grid>
                            <Border
                                Name="Border"
                                Margin="{TemplateBinding Margin}"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="0,0,0,2"
                                CornerRadius="4 4 0 0">
                                <ContentPresenter
                                    x:Name="ContentSite"
                                    Margin="{TemplateBinding Padding}"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    ContentSource="Header" />
                            </Border>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Border" Property="BorderBrush" Value="{DynamicResource PrimaryHueMidBrush}" />
                                <Setter TargetName="Border" Property="Background" Value="{DynamicResource PrimaryHueLightBrush}" />
                                <Setter Property="Foreground" Value="{DynamicResource PrimaryHueDarkBrush}" />
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="{DynamicResource PrimaryHueLightBrush}" />
                                <Setter Property="Foreground" Value="{DynamicResource PrimaryHueDarkBrush}" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style BasedOn="{StaticResource MaterialDesignRaisedButton}" TargetType="Button">
            <Setter Property="Margin" Value="5" />
            <Setter Property="Width" Value="100" />
        </Style>
    </Window.Resources>



    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300" />
            <!--  左侧控制面板  -->
            <ColumnDefinition Width="*" />
            <!--  右侧渲染区域  -->
        </Grid.ColumnDefinitions>

        <!--  左侧控制面板  -->
        <materialDesign:Card
            Margin="5"
            Padding="10"
            Background="#FF90455D"
            UniformCornerRadius="10">
            <DockPanel Background="#00E8DEF8">
                <!--  顶部菜单栏  -->
                <materialDesign:Card
                    Margin="0,0,0,10"
                    Padding="0"
                    Background="{DynamicResource MaterialDesignPaper}"
                    DockPanel.Dock="Top"
                    UniformCornerRadius="8">
                    <Menu>
                        <MenuItem Header="文件">
                            <MenuItem Header="打开..." />
                            <MenuItem Header="保存帧..." />
                            <Separator />
                            <MenuItem Header="退出" />
                        </MenuItem>
                        <MenuItem Header="视图">
                            <MenuItem Header="背景颜色：黑色" />
                            <MenuItem Header="背景颜色：白色" />
                        </MenuItem>
                        <MenuItem Header="动画">
                            <MenuItem Header="播放" />
                            <MenuItem Header="暂停" />
                            <MenuItem Header="下一帧" />
                        </MenuItem>
                    </Menu>
                </materialDesign:Card>



                <materialDesign:Card
                    x:Name="DropCard"
                    Height="85"
                    Margin="0,0,0,10"
                    Padding="10"
                    AllowDrop="True"
                    Background="{DynamicResource MaterialDesignPaper}"
                    DockPanel.Dock="Top"
                    DragEnter="Card_DragEnter"
                    DragLeave="Card_DragLeave"
                    Drop="Card_Drop"
                    MouseDoubleClick="DropCard_MouseDoubleClick"
                    MouseEnter="DropCard_MouseEnter"
                    UniformCornerRadius="8">

                    <!--  内容区域  -->
                    <StackPanel
                        x:Name="ContentPanel"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center">
                        <materialDesign:PackIcon
                            x:Name="Icon"
                            Width="32"
                            Height="32"
                            Margin="0,0,0,8"
                            Kind="FileUpload" />
                        <TextBlock
                            x:Name="HintText"
                            HorizontalAlignment="Center"
                            FontSize="14"
                            Foreground="{DynamicResource MaterialDesignBody}"
                            Text="拖放 .png、_anim、_build 文件到此处" />
                    </StackPanel>

                </materialDesign:Card>
                <StackPanel Margin="0,10,0,10">
                    <!--  符号结构树 Card  -->
                    <materialDesign:Card
                        Height="318"
                        Margin="0,0,0,10"
                        Padding="10"
                        Background="{DynamicResource MaterialDesignPaper}"
                        UniformCornerRadius="8">

                        <StackPanel FocusVisualStyle="{x:Null}">
                            <TextBlock
                                Margin="0,0,0,10"
                                FocusVisualStyle="{x:Null}"
                                FontSize="16"
                                FontWeight="Bold"
                                Text="符号索引树" />

                            <!--  使用 WPF 自带的 TreeView 控件  -->
                            <TreeView
                                x:Name="BuildTreeView"
                                Height="270"
                                Background="#00DEDBDB"
                                ItemsSource="{Binding BuildNodes}"
                                ScrollViewer.VerticalScrollBarVisibility="Hidden"
                                SelectedItemChanged="BuildTreeView_SelectedItemChanged"
                                Style="{StaticResource MaterialDesignTreeView}">
                                <TreeView.Resources>
                                    <ContextMenu
                                        x:Key="TreeViewItemContextMenu"
                                        Padding="0"
                                        Background="#FFFFFFFF"
                                        BorderBrush="#FF90455D"
                                        BorderThickness="52">
                                        <MenuItem
                                            Click="ExportSelectedImage_Click"
                                            FontSize="16"
                                            FontWeight="Bold"
                                            Header="导出图片" />
                                    </ContextMenu>


                                    <Style BasedOn="{StaticResource {x:Type TreeViewItem}}" TargetType="TreeViewItem">
                                        <Setter Property="ContextMenu" Value="{StaticResource TreeViewItemContextMenu}" />
                                        <EventSetter Event="PreviewMouseRightButtonDown" Handler="TreeViewItem_PreviewMouseRightButtonDown" />
                                    </Style>
                                </TreeView.Resources>

                            </TreeView>



                        </StackPanel>
                    </materialDesign:Card>


                    <!--  参数信息 Card  -->
                    <materialDesign:Card
                        Margin="0"
                        Padding="10"
                        Background="{DynamicResource MaterialDesignPaper}"
                        UniformCornerRadius="8">
                        <StackPanel>
                            <TextBlock
                                Margin="0,0,0,10"
                                FontSize="16"
                                FontWeight="Bold"
                                Text="11" />
                            <!--  可添加参数信息显示区域  -->
                            <TextBlock Height="119" Text="(..)" />
                        </StackPanel>
                    </materialDesign:Card>
                </StackPanel>





            </DockPanel>
        </materialDesign:Card>


















        <!--  图片预览  -->
        <Border
            Grid.Column="1"
            Margin="10"
            AllowDrop="True"
            Background="#FF8A8A8A"
            CornerRadius="8"
            Drop="Card_Drop">
            <Image
                x:Name="PreviewImage"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Stretch="Uniform" />
        </Border>
    </Grid>








</Window>
